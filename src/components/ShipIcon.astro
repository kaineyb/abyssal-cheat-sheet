---
import { type Class, type Icons } from "../data/_base";
import { getShipIcon } from "../data/icons";

interface Props {
  shipClass: Class;
}

const { shipClass } = Astro.props;
---

<img
  title={shipClass}
  width="32px"
  height="32px"
  src={getShipIcon(shipClass)}
  alt={shipClass}
/>

<style scoped>
  img {
    /* outline: 1px solid white; */
    position: relative;
    top: 8px;
    /* filter: invert(1); */
  }
</style>
